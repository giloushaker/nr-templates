    }
  }

  .avoid-page-break {
    margin-bottom: 32px;
    padding: 2%;
  }

  .avoid-page-break:not(:has(:is(.ability-box, .weapons-table))) {
    display: none;
  }

  .section-header {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1em 0 0.2em;
    font-weight: bold;
    font-variant: small-caps;
    font-size: 2em;
  }

  .card-header:not(:has(*)),
  .hide-if-empty:not(:has(*)) {
    display: none;
  }

  .card-header {
    position: relative;
  }

  .titleWrap {
    padding: 20px 30px 30px 80px;
    height: 100%;
  }

  .titleCard {
    height: 100%;
    display: flex;
    background: url(https://raw.githubusercontent.com/giloushaker/nr-templates/refs/heads/main/assets/backgrounds/aos-title.png),
      var(--primary-color, black);
    background-blend-mode: color-burn;
    background-size: cover;
    clip-path: var(--jagged-edges);
  }

  .title {
    margin: auto;
    font-size: xx-large;
    text-align: center;
    padding-left: 80px;
    padding-right: 20px;
    color: white;
    text-transform: uppercase;
    height: 110px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .subtitle {
    font-size: large;
  }

  .ward {
    left: 115px;
    top: 3px;
    position: absolute;
    aspect-ratio: 1;
    z-index: 1;
    display: grid;
    grid-template-columns: 34px;
    grid-template-rows: 34px;
    gap: 0px 0px;
    grid-template-areas: "icon";
    align-items: anchor-center;
    justify-items: center;

    span {
      color: white;
      font-size: 1.6em;
      white-space: nowrap;
      line-height: 1;
      grid-area: icon;
      height: 100%;
      height: auto;
      transform: translate(2px, 2px);
    }

    &::before {
      content: "";
      background: rgb(126 10 17);
      border-radius: 50%;
      border: 2px solid rgb(139 122 90);
      width: 100%;
      height: 100%;
      grid-area: icon;
    }
  }

  .statWheel {
    position: absolute;
    background-image: url("https://raw.githubusercontent.com/BSData/age-of-sigmar-4th/main/images/statwheel.png");
    background-repeat: no-repeat;
    background-size: cover;
    height: 150px;
    width: 150px;
    z-index: 1;

    .statWheelStats {
      position: relative;
      height: 150px;
      width: 150px;
    }

    .statwheelEntry {
      position: absolute;
      text-align: center;
      height: 100%;
      width: 100%;
      color: white;

      .statLabel {
        font-size: 7px;
        text-transform: uppercase;

        svg {
          position: absolute;
          font-size: 1.2em;
          top: 0;
          left: 0;
          width: 150px;
          height: 150px;

          text {
            fill: #ffffff;
          }

          textPath {
            text-anchor: middle;
          }

          path {
            fill: transparent;
          }
        }
      }

      .stat {
        font-size: 1.6em;
        font-weight: 500;
      }
    }

    .statwheelEntry:nth-child(1) {
      .stat {
        transform: translate(2px, 38px);
      }

      svg {
        transform: rotate(-90deg);
      }
    }

    .statwheelEntry:nth-child(2) {
      .stat {
        transform: translate(-30px, 67px);
      }

      svg {
        transform: rotate(-180deg);
      }
    }

    .statwheelEntry:nth-child(3) {
      .stat {
        transform: translate(30px, 67px);
      }

      svg {
        transform: rotate(0deg);
      }
    }

    .statwheelEntry:nth-child(4) {
      .stat {
        transform: translateY(96px);
      }

      svg {
        transform: rotate(90deg);
      }
    }
  }

  .weapons-table {
    td>* {
      vertical-align: sub;
      vertical-align: -webkit-baseline-middle;
    }

    td,
    td {
      border: 1px solid var(--primary-color, cadetblue);
    }

    td:not(.placeholder) {
      padding: 3px;
    }

    td:has(+ .placeholder) {
      border-right: none;
    }

    td:first-child {
      border-left: none;
    }

    td:last-child {
      border-right: none;
    }

    td.placeholder {
      border-left: none;
      border-right: none;
    }

    thead {
      color: white;
      background-color: var(--primary-color, cadetblue);
    }

    thead tr td:first-child {
      text-transform: uppercase;
    }

    tbody tr:nth-child(even) {
      background-color: color-mix(in srgb, var(--primary-color, cadetblue) 25%, transparent);
    }

    border-collapse: collapse;
    padding: 0 20px;
    width: calc(100% - 50px);
    margin: 0 auto;
    text-align: center;
  }

  .rules {
    width: calc(100% - 50px);
    margin: 0 auto;

    .rule {
      margin-bottom: 1em;
    }

    .rule-name {
      font-weight: bold;

      &::after {
        content: ":";
      }
    }
  }

  .ability-section {
    gap: 8px;
    margin: 20px;
    width: calc(100% - 40px);
    column-count: 2;
    column-gap: 10px;

